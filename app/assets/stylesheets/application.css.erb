body{
	background: url(<%= asset_path "white_dots_on_black.jpg" %>) no-repeat fixed;
	background-size: cover;
} 

.minnie{
	margin-top: -35%;
}

.minnie-img{
	width: 50%;
}

.rsvp-btn{
	float: right;
}

.jumbotron{
	padding-bottom: 5%;
}

.btn-primary{
	background-color: #d97caa;
}

.btn-primary:hover{
	background-color: #ba2b75;
}

.jumbotron h1{
	text-align: right;
}

h1{
	font-family: 'Lobster', cursive;
	font-size: 6.5em;
}

.panel-title, .lobster{
	font-family: 'Lobster', cursive;
	font-size: 2.5em;
}

.lobster{
	font-family: 'Lobster', cursive;
	font-size: 2.5em;
	line-height: 1.3em;
}

.small-lobster{
	font-family: 'Lobster', cursive;
	font-size: .8em;
}

.panel-body{
	font-size: 1.5em;
	line-height: 1.3em;
}

.panel-body strong{
	font-family: 'Lobster', cursive;
	font-size: 1.6em;
}

.col-md-6{
	background: white;
	border-radius: 5px;
	height: 505px;
}

.center{
	text-align: center;
}