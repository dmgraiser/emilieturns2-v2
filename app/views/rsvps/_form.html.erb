<%= form_for(@rsvp) do |f| %>
  <% if @rsvp.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rsvp.errors.count, "error") %> prohibited this rsvp from being saved:</h2>

      <ul>
      <% @rsvp.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">  
    <div class="field col-xs-8 col-xs-offset-2">
      <%= f.text_field :name, class: "form-control input-lg", placeholder: "Name" %>
    </div>
    <div class="field col-xs-8 col-xs-offset-2 center lobster">
      <%= f.label "Are you attending?" %><br>
      <%= radio_button("rsvp", "attending", true) %><span class="small-lobster"> Yes</span><br /> 
      <%= radio_button("rsvp", "attending", false) %><span class="small-lobster"> No</span>
    </div>
    <div class="field col-xs-8 col-xs-offset-2">
      <%= f.text_area :comment, class: "form-control input-lg", placeholder: "Comment" %>
    </div>
    <div class="actions col-xs-8 col-xs-offset-2 center">
      <%= f.submit :class => 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
